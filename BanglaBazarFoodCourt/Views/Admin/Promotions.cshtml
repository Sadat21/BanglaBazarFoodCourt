@model IEnumerable<BanglaBazarFoodCourt.Models.Entities.Promo>

@{
    ViewBag.Title = "Promotions";
}

<h2>Promotions</h2>

<p>
    @Html.ActionLink("Create New", "CreatePromotion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Discount", new { id = item.PromoID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPromotion", new { id=item.PromoID }) |
            @Html.ActionLink("Add Food", "CreateDiscount", new { id=item.PromoID }) |
            @Html.ActionLink("Delete", "DeletePromotion", new { id=item.PromoID })
        </td>
    </tr>
}

</table>
