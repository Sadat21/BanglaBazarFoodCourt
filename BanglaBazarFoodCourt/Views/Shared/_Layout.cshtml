<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bangla Bazaar Food Court</title>
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom" style="max-height: 500px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
<!--                @Html.ActionLink("Bangla Bazaar Food Court", "Index", "Home", new { area = "" }, new { @class = "nav-custom navbar-brand" })-->
                <a href="@Url.Action("Index", "Home", new { @class = "nav-custom navbar-brand" })">
                    <img src="~/Resources/logo_transparent.png" style="width: 100px; height:100px;" />
                </a>
            </div>
            <div class="navbar-collapse collapse navbar-custom">
                <ul class="nav navbar-nav nav-custom">
<!--                    <li>@Html.ActionLink("Home", "Index", "Home")</li>-->
                    <li>@Html.ActionLink("Order Now!", "Order", "Home")</li>
                    <li>@Html.ActionLink("Menus", "Menus", "Home")</li>
                    <li>@Html.ActionLink("Specials", "Specials", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bangla Bazaar Food Court</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
