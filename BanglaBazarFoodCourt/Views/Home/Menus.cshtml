            <div class="thumbnail thumbnail-custom"><img src="http://via.placeholder.com/300x300" /></div>
            <div class="thumbnail thumbnail-custom"><img src="http://via.placeholder.com/300x300" /></div>
            <div class="thumbnail thumbnail-custom"><img src="http://via.placeholder.com/300x300" /></div>
        </div>
    </div>

    <!-- modal for detailed information about the food items -->
    <div id="viewFood" class="modal fade" role="dialog">
        <div class="modal-dialog modal-custom">
            <!-- food item content -->
            <div class="modal-content">
                <div class="modal-header modal-lg">
                    <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Food Item Name</h4>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6"><img src="http://via.placeholder.com/300x300" /></div>
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>