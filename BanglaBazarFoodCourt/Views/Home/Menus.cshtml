}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="thumbnail thumbnail-custom"><img src="http://via.placeholder.com/300x300" data-toggle="modal" data-target="#viewFood"/></div>
            <div class="thumbnail thumbnail-custom"><img src="http://via.placeholder.com/300x300" /></div>
            <div class="thumbnail thumbnail-custom"><img src="http://via.placeholder.com/300x300" /></div>
        </div>

        <div class="col-md-4">
            <div class="thumbnail thumbnail-custom"><img src="http://via.placeholder.com/300x300" /></div>
