@model BanglaBazarFoodCourt.ViewModels.MenuViewModel


@{
    ViewBag.Title = "Menus";
}

<h2 class="hdr-custom">@ViewBag.Title</h2>

<tr class="container">

    <div class="text-center">
        <div class="btn-group">
            <a class="btn btn-default ft-nav" href="#appetizer">Appetizers</a>
            <a class="btn btn-default ft-nav" href="#entree">Entrées</a>
            <a class="btn btn-default ft-nav" href="#dessert">Desserts</a>
            <a class="btn btn-default ft-nav" href="#drink">Drinks</a>
        </div>
    </div>

    <tr class="row">

        <a name="#appetizer">&emsp;<br>&emsp;</a>
        <h2 class="hdr-custom food-type">Appetizers</h2>
        <table class="table">
            @{

                for (int i = 0; i < Model.Appetizer.Count();)
                {

                    <tr>
                        @for (int j = 0; j < 3 && i < Model.Appetizer.Count(); j++, i++)
                        {
                            <div class="thumbnail thumbnail-custom">
                                <td class="menus">
                                    @{
                                        var base64 = Convert.ToBase64String(Model.Appetizer.ElementAt(i).Picture);
                                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                    }

                                    <img src="@imgSrc" data-toggle="modal" data-target="#@Model.Appetizer.ElementAt(i).FoodID" width="364" height="364" style="margin:auto;display:block;" />
                                    <div class="caption">
                                        <h4 class="hdr-custom" style="text-align:center;">@Model.Appetizer.ElementAt(i).Name</h4>
                                    </div>
                                </td>
                            </div>
                                <!-- modal for detailed information about the food items -->
                                        <div id="@Model.Appetizer.ElementAt(i).FoodID" class="modal fade" role="dialog">
                                            <div class="modal-dialog modal-custom">
                                                <!-- food item content -->
                                                <div class="modal-content">
                                                    <div class="modal-header modal-lg">
                                                        <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                                                        <h4 class="modal-title title-custom">@Model.Appetizer.ElementAt(i).Name</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="container">
                                                            <div class="row">
                                                                <div class="col-md-6">

                                                                    <img src="@imgSrc" width="300" height="300">
                                                                </div>
                                                                <div class="col-md-6 desc-custom">
                                                                    <i>@Model.Appetizer.ElementAt(i).Description</i>
                                                                    <p><p>
                                                                        <h4 class="price">
                                                                            @using (Html.BeginForm("Order", "Home"))
                                                                            {
                                                                                <b>$@Model.Appetizer.ElementAt(i).Price&emsp;</b>
                                                                                Session["order_start"] = Model.Appetizer.ElementAt(i);
                                                                                <button type="submit" class="btn btn-default btn-custom">Order</button>
                                                                            }
                                                                        </h4>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        }
                    </tr>

                                        }
            }
        </table>


