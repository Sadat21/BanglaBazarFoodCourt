@model IEnumerable<BanglaBazarFoodCourt.Models.Entities.Contains>

@{
    ViewBag.Title = "Contains";
}

<h2>Contains</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Food_Item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Food_Item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteContains")
        </td>
    </tr>
}

</table>
